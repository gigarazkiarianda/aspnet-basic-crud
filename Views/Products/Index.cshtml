@model IEnumerable<ProductDB.Models.Product>

<h1>Product List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Stock</td>
                <td>
                    <a href="@Url.Action("Details", "Products", new { id = product.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Edit", "Products", new { id = product.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Products", new { id = product.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Products")" class="btn btn-primary">Create New Product</a>
